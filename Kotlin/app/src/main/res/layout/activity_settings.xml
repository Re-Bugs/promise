<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SettingsActivity">

    <!-- 스크롤을 위해 ScrollView 추가 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 알림 설정 표시 -->
            <TextView
                android:id="@+id/currentNotificationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 알림 설정: "
                android:textSize="18sp"
                android:textColor="#333" />

            <!-- 알림 설정 선택 Spinner -->
            <Spinner
                android:id="@+id/notificationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:background="@drawable/spinner_background"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <!-- 알림 설정 업데이트 버튼 -->
            <Button
                android:id="@+id/updateButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="알림 설정 변경"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />

            <!-- 아침, 점심, 저녁 알림 시간 설정 -->
            <TextView
                android:id="@+id/morningTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="아침 시간"
                android:textSize="16sp" />

            <TimePicker
                android:id="@+id/morningTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/afternoonTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="점심 시간"
                android:textSize="16sp" />

            <TimePicker
                android:id="@+id/afternoonTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/eveningTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="저녁 시간"
                android:textSize="16sp" />

            <TimePicker
                android:id="@+id/eveningTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:layout_gravity="center" />

            <!-- 알람 시간 변경 버튼 추가 -->
            <Button
                android:id="@+id/setAlarmTimesButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="알람 시간 변경"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />

            <!-- 애플리케이션 초기화 버튼 -->
            <Button
                android:id="@+id/resetButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="애플리케이션 초기화"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>