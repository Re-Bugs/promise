<!-- res/drawable/rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/holo_blue_light" /> <!-- 배경 색상 설정 -->
    <corners android:radius="12dp" /> <!-- 버튼의 모서리를 둥글게 설정 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray" /> <!-- 버튼의 테두리 색상 및 두께 설정 -->
</shape>